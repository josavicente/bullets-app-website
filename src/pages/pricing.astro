const plans = [
  {
    name: "Gratis",
    price: "0 €",
    popular: false,
    features: [
      "Sin límite de subscripciones",
      "Listado de servicios incluído",
      "Crea tus propias subscripciones",
      "Personaliza la apariencia",
      "Notificaciones de pago",
      "Privada & Segura",
    ],
    button: {
      text: "Descarga la app",
      link: "https://apps.apple.com/es/app/bullets/id1536420851",
    },
  },
  {
    name: "Opción Plus",
    price: "3,99 €",
    popular: false,
    features: [
      "Sin límite de subscripciones",
      "Listado de servicios incluído",
      "Crea tus propias subscripciones",
      "Personaliza la apariencia",
      "Notificaciones de pago",
      "Privada & Segura",
      "Comparte con amigos",
      "Pausa subscripciones",
      "Resumen de tus subscripciones",
      "Widgets en la pantalla de inicio",
    ],
    button: {
      text: "Descarga la app",
      link: "https://apps.apple.com/es/app/bullets/id1536420851",
    },
  },
  {
    name: "Opción Premium",
    price: "6,99 €",
    popular: true,
    features: [
      "Sin límite de subscripciones",
      "Listado de servicios incluído",
      "Crea tus propias subscripciones",
      "Personaliza la apariencia",
      "Notificaciones de pago",
