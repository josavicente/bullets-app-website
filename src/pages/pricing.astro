---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Plans from "@components/pricing.astro";

const plans = [
  {
    name: "Gratis",
    price: "0 ",
    popular: false,
    features: [
      "Lifetime free",
      "Up to 3 users",
      "Unlimited Pages",
      "Astro Sub domain",
      "Basic Integrations",
      "Community Support",
    ],
    button: {
      text: "Descarga la app",
      link: "https://apps.apple.com/es/app/bullets/id1536420851",
    },
  },
  {
    name: "Opción Plus",
    price: "3,99",
    popular: false,
    features: [
      "All Free Features",
      "Up to 20 users",
      "20 Custom domains",
      "Unlimited Collaborators",
      "Advanced Integrations",
      "Priority Support",
    ],
    button: {
      text: "Descarga la app",
      link: "https://apps.apple.com/es/app/bullets/id1536420851",
    },
  },
  {
    name: "Opción Premium",
    price: "6,99",
    popular: true,
    features: [
      "All Pro Features",
      "Unlimited Custom domains",
      "99.99% Uptime SLA",
      "SAML & SSO Integration",
      "Dedicated Account Manager",
      "24/7 Phone Support",
    ],
    button: {
      text: "Descarga la app",
      link: "https://apps.apple.com/es/app/bullets/id1536420851",
    },
  },
];
---

<Layout title="Plans">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Planes</Fragment>
      <Fragment slot="desc"
        >Free, Plus o Premium</Fragment
      >
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {plans.map((item) => <Plans plan={item} />)}
    </div>
  </Container>
</Layout>
